{
  "name": "@hoodieshq/ms-tools-ui",
  "version": "0.3.0",
  "description": "Reusable React components built with React, Tailwind CSS, and Shadcn, forming the visual building blocks of microsites",
  "main": ".",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./index.js": "./dist/index.js",
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup ./src/index.ts --config=./tsup-esm.config.mjs --tsconfig=./tsconfig.json",
    "dev": "pnpm run storybook",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{js,mjs,cjs,ts,tsx}\" --config ./prettier.config.js",
    "format:fix": "pnpm run format --write",
    "clean": "rm -rf dist",
    "playwright:install": "pnpm exec playwright install chromium --with-deps",
    "prepublish": "pnpm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate": "pnpx shadcn@2.4.1 add"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.1.0",
    "react-dom": "^18.0.0 || ^19.1.0"
  },
  "dependencies": {
    "@hoodieshq/ms-tools-config": "workspace:^",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-select": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/dom": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.509.0",
    "postcss": "^8.4.31",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/experimental-nextjs-vite": "^8.6.14",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@vitest/browser": "3.1.2",
    "autoprefixer": "^10.4.17",
    "css-loader": "^7.1.2",
    "playwright": "^1.52.0",
    "postcss-loader": "^8.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "process": "^0.11.10",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.12",
    "style-loader": "^4.0.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.3",
    "vitest": "^3.1.2"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
