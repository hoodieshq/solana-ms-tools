{
  "name": "@solana/ms-tools-ui",
  "version": "0.1.0",
  "description": "Reusable React components built with React, Tailwind CSS, and Shadcn, forming the visual building blocks of microsites",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "pnpm run storybook",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{js,mjs,cjs,ts,tsx}\" --config ./prettier.config.js",
    "format:fix": "pnpm run format --write",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.1.0",
    "react-dom": "^18.0.0 || ^19.1.0"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@radix-ui/react-slot": "^1.2.0",
    "@solana/ms-tools-config": "workspace:^",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/dom": "^10.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "postcss": "^8.4.31",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-webpack5": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "autoprefixer": "^10.4.17",
    "css-loader": "^6.10.0",
    "postcss-loader": "^8.1.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.12",
    "style-loader": "^3.3.4",
    "tsup": "^8.2.4",
    "typescript": "^5.5.3",
    "vitest": "^3.1.1"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
