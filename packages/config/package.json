{
  "name": "@solana/ms-tools-config",
  "version": "0.1.0",
  "description": "Shared ESLint and Prettier configurations to ensure consistent code style and quality across all Solana microsite projects",
  "keywords": [
    "solana",
    "config",
    "eslint",
    "prettier",
    "typescript",
    "stylelint"
  ],
  "type": "commonjs",
  "exports": {
    "./compatFlat.mjs": "./util.mjs",
    "./prettier.config.js": "./prettier.config.js",
    "./eslint.config.react.mjs": "./eslint.config.react.mjs",
    "./eslint.config.base.js": "./eslint.config.base.js",
    "./eslint.config.ts.js": "./eslint.config.ts.js",
    "./vitest.config.js": "./vitest.config.js",
    "./stylelint.config.js": "./stylelint.config.js",
    "./tsconfig.json": "./tsconfig.json",
    "./postcss.config.mjs": "./postcss.config.mjs",
    "./tsup-esm.config.mjs": "./tsup-esm.config.mjs"
  },
  "main": ".",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "format": "prettier --check \"**/*.{js,mjs,cjs}\" --config ./prettier.config.js",
    "format:fix": "pnpm run format --write"
  },
  "peerDependencies": {
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.1.1",
    "debug": "^4.4.0",
    "eslint": "^9.24.0",
    "eslint-config-eslint": "^11.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^15.15.0",
    "postcss-modules": "^6.0.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.3",
    "vitest": "^3.1.1"
  },
  "optionalDependencies": {
    "tsup": "^8.2.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {}
}
