{
  "name": "@solana/ms-tools-analytics",
  "version": "0.1.0",
  "description": "Logic for integrating Google Analytics into Solana microsites",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "mkdir -p dist && echo '// Skip build: no sources yet' > dist/index.js",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "format": "prettier --check \"**/*.{js,mjs,cjs,ts,tsx}\" --config ./prettier.config.js",
    "format:fix": "pnpm run format --write",
    "prepublish": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@solana/ms-tools-config": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.15.3",
    "prettier": "^3.5.3"
  },
  "devDependencies": {
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.3",
    "vitest": "^3.1.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  }
}
